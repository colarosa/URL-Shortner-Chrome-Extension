{
  "manifest_version": 3,
  "name": "URL Shortener",
  "version": "1.0",
  "description": "Quickly shorten URLs from your browser.",
  "author": "Made by triangledigital.xyz",
  "permissions": ["activeTab", "scripting", "clipboardWrite"],
  "host_permissions": ["https://api-ssl.bitly.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "icons": {
    "128": "icon.png"
  }
}
